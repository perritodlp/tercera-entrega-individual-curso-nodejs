{{>header}}

    <h1 class="text-center">Virtual EduCali</h1>
    <p class="lead text-center">Ingreso a la plataforma.</p>

    <div class="row">
        <div class="col"></div>
        <div class="col-md-6">
            <div id="error-group">{{errorsMessageHelper errors}}</div>

            <form action="/login" method="POST">
                <div class="form-row">{{alertMessageHelper response}}</div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="username">Nombre de usuario</label>
                        <input type="text" class="form-control" id="username" name="username" value="{{req.body.username}}" placeholder="Nombre de usuario">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="password">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">
                    </div>
                </div>            

                <button class="btn btn-lg btn-primary" id="login-btn" role="button">Iniciar sesión</button> 
            </form> 
        </div>  
        <div class="col"></div>     
    </div>

{{>footer}}