{{>header}}

        <h1>Formulario para ingresar un nuevo curso</h1>
        <p class="lead">Utilice este formulario, para ingresar la información de un nuevo curso</p>

        {{alertMessageHelper response}}

        <div id="error-group">{{errorsMessageHelper errors}}</div>

        <form action="/saveCourse" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="courseId">Id</label>
                    <input type="number" class="form-control" id="courseId" name="courseId" value="{{req.body.courseId}}" placeholder="Identificador del curso">
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{req.body.name}}" placeholder="Nombre del curso">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="modality">Modalidad</label>
                    <select class="form-control" name="modality" id="modality">
                        <option value=""></option>
                        <option value="presencial">Presencial</option>
                        <option value="virtual">Virtual</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="cost">Valor</label>
                    <input type="text" class="form-control" id="cost" name="cost" value="{{req.body.cost}}" placeholder="Valor del curso">
                </div>
            </div>   
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="description">Descripción</label>
                    <textarea class="form-control" name="description" id="description" cols="30" rows="5" placeholder="Descripción del curso">{{req.body.description}}</textarea>
                </div>
                <div class="form-group col-md-6">
                    <label for="hourlyIntensity">Intensidad horaria</label>
                    <input type="number" class="form-control" id="hourlyIntensity" name="hourlyIntensity" value="{{req.body.hourlyIntensity}}" placeholder="Intensidad horaria">
                </div>
            </div>        

            <button class="btn btn-lg btn-primary" id="saveCourse-btn" role="button">Crear curso</button>
        </form>

{{>footer}}  