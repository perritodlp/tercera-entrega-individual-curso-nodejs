{{>header}}

    <h1 class="text-center">Virtual EduCali</h1>
    <p class="lead text-center">Registro en la plataforma.</p>

    <div class="row">
        <div class="col"></div>
        <div class="col-md-10">
            <div id="error-group">{{errorsMessageHelper errors}}</div>

            <form action="/signup" method="POST">
                <div class="form-row">{{alertMessageHelper response}}</div>
                <div class="form-group row">
                    <label for="identificationNumber" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Documento de identidad</label>
                    <div class="col-md-9 col-sm-10">
                        <input type="number" class="form-control" name="identificationNumber" id="identificationNumber" value="{{req.body.identificationNumber}}" placeholder="Número de identificación">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Nombre</label>
                    <div class="col-md-9 col-sm-10">
                        <input type="text" class="form-control" name="name" id="name" value="{{req.body.name}}" placeholder="Nombre">
                    </div>
                </div> 
                <div class="form-group row">
                    <label for="email" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Correo electrónico</label>
                    <div class="col-md-9 col-sm-10">
                        <input type="email" class="form-control" name="email" id="email" value="{{req.body.email}}" placeholder="Correo electrónico">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Teléfono</label>
                    <div class="col-md-9 col-sm-10">
                        <input type="number" class="form-control" name="phone" id="phone" value="{{req.body.phone}}" placeholder="Teléfono">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="username" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Usuario</label>
                    <div class="col-md-9 col-sm-10">
                        <input type="text" class="form-control" name="username" id="username" value="{{req.body.username}}" placeholder="Nombre de usuario">
                    </div>
                </div>                                                
                <div class="form-group row">
                    <label for="password" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Contraseña</label>
                    <div class="col-md-9 col-sm-10">
                        <input type="password" class="form-control" name="password" id="password" placeholder="**********">
                    </div>
                </div>
                <div class="form-group row">   
                    <label for="confirmPassword" class="col-md-3 col-sm-2 col-form-label col-form-label-sm">Confirmar contraseña</label>             
                    <div class="col-md-9 col-sm-10">
                        <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="**********">
                    </div>
                </div>                
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3 col-sm-10">
                        <button class="btn btn-primary" id="register-btn" role="button">Registrarse</button> 
                    </div>
                </div>
            </form>
        </div>
        <div class="col"></div> 
    </div>

{{>footer}}